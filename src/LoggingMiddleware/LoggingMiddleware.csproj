<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <IsPackable>true</IsPackable>
        <TargetFramework>netstandard2.0</TargetFramework>
        <RootNamespace>Aurokk.LoggingMiddleware</RootNamespace>
        <AssemblyName>Aurokk.LoggingMiddleware</AssemblyName>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <VersionPrefix>1.0.1</VersionPrefix>
        <Authors>aurokk</Authors>
        <Title>Aurokk.LoggingMiddleware</Title>
        <Description>Middleware allows you to log incoming/outcoming requests with configurable fields set. Also it allows you to add a lot of request fields to logging context of http request.</Description>
        <RepositoryUrl>https://github.com/aurokk/logging-middleware</RepositoryUrl>
        <PackageTags>logging middleware request response context</PackageTags>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Http" Version="2.2.2"/>
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="2.2.0"/>
    </ItemGroup>
</Project>
